
@model List<SchoolManagementSystem.Shared.StudentViewModel>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="page-title" class="padding-top-15 padding-bottom-15">
    <div class="row">
        <div class="col-sm-7">
            <a href="/Student/Index"> Index </a>/ Student List
        </div>
    </div>
</section>

<div class="container-fluid container-fullw bg-white">
    <p class="text-small center text-danger">@ViewBag.ValidationMessage</p>
    <div class="row">
        <div class="col-md-12">
            <h5 class="over-title margin-bottom-15">Student <span class="text-bold">List</span></h5>
            <p>
                List of all approved and new students.
            </p>
            <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>FullNames</th>
                        <th>
                            ID/Passport
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th class="hidden-xs">Phone</th>
                        <th class="hidden-xs">ApplicationStatus</th>
                        <th class="hidden-xs">Address</th>
                        <th class="hidden-xs">
                            CreatedBy
                        </th>
                        <th class="hidden-xs">
                            DateCreated
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StudentId</td>
                            <td>@item.Firstname  @item.Surname </td>
                            <td>@item.IdOrPassport</td>
                            <td>@item.IsActive</td>
                            <td class="hidden-xs">@item.CelPhoneNumber</td>
                            <td class="hidden-xs">@item.ApplicationStatus</td>
                            <td class="hidden-xs">@item.PhysicalAddress</td>
                            <td class="hidden-xs">@item.CreatedBy</td>
                            <td class="hidden-xs">@item.DateCreated</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.StudentId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- end: DYNAMIC TABLE -->