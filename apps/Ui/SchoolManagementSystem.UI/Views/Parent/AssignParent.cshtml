
@model List<SchoolManagementSystem.Shared.ParentViewModel>
@{
    ViewData["Title"] = "Assign Parent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="page-title" class="padding-top-15 padding-bottom-15">
    <div class="row">
        <div class="col-sm-7">
            <a href="/Parent/Index"> Index </a>/ Assign Parent
        </div>
    </div>
</section>

<div class="container-fluid container-fullw bg-white">
    <p class="text-small center text-danger">@ViewBag.ValidationMessage</p>
    <div class="row">
        <div class="col-md-12">
            <h5 class="over-title margin-bottom-15">Parent <span class="text-bold">List</span></h5>
            <p>
                List of all parents.
            </p>
            <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>FullNames</th>
                        <th>
                            ID/Passport
                        </th>
                        <th>
                            IsActive
                        </th>
                        <th class="hidden-xs">Phone</th>
                        <th class="hidden-xs">Email</th>
                        <th class="hidden-xs">
                            CreatedBy
                        </th>
                        <th class="hidden-xs">
                            AssignParent
                        </th>                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ParentId</td>
                        <td>@item.Firstname  @item.Surname </td>
                        <td>@item.IdOrPassport</td>
                        <td>@item.IsActive</td>
                        <td class="hidden-xs">@item.CelPhoneNumber</td>
                        <td class="hidden-xs">@item.PersonalEmailAddress</td>
                        <td class="hidden-xs">@item.CreatedBy</td>
                        @if (item.UserId == null)
                        {
                            <td><a href="/Identity/Account/Register?id=@item.ParentId">AssignToSystem</a></td>
                        }
                        else
                        {
                            <td><p class="text-danger">User Assigned</p></td>
                        }                      
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
